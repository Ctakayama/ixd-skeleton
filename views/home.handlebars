<html>
<head>
	<title>Home</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	
	<style>
		@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap');
	</style>
	<link href="/css/introHCI.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery.js"></script>

	<script src="/js/home.js"></script>
</head>
<body>

	<div class = "nav-options upper">
		{{> header}}

		{{#each user}}
		<h1 id = "welcome">Welcome,<br> {{name}}!</h1>
		{{/each}}
		
	</div>
	

	<div class = "nav-options mid">
		
		<div class = "grow">
			<a href = "/uploadText">
				<img src = "../images/{{icons.[upload]}}" alt = "upload" height = "100"><br>
				<span class = "btnLabel">Upload Text</span>
			</a>
		</div>
		
		<div class="break"></div> 
		<div class = "grow">
		<a href = "/pasteText">
			<img src = "../images/{{icons.[paste]}}" alt = "paste" height = "100"><br>
			<span class = "btnLabel">Paste Text</span>
		</a>
		</div>
		<div class="break"></div>
		<div class = "grow" id = "scan">
		<a href = "/scan">
			<img src = "../images/{{icons.[scan]}}" alt = "scan" height = "100"><br>
			<span class = "btnLabel">Scan Text</span>
		</a>
		</div> 
	</div>
	<div class = "nav-options lower"></div>
	{{> footer}}

	
</body>
</html>
