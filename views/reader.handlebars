<html>
<head>
	<title>Reader</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">

	<style>
		@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap');
	</style>
	<script src="https://code.jquery.com/jquery.js"></script>
	<link href="/css/introHCI.css" rel="stylesheet">
	<script src="/js/reader.js"></script>


</head>
	
	<div class="grid-container">
		{{#each nav-reader}}
		<div class="{{class}}" id="{{id}}" onclick="{{onclick}}">
			<img src="../images/{{icon}}" id = "{{img_id}}" alt = "{{alt}}" width = "50"><br>
			<div id = "{{label_id}}">{{label}}</div>
		</div>
		{{/each}}

		<div class="ReadingText"><a href = "home"><button class = "reader backBtn btn">E X I T</button></a>
			<div class = "reader-content" ><div id = "readText"></div></div>
		</div>
		
		<div class="PageProgress" id = "pgCount"></div>
	</div>
	<script src="../js/darkmode.js"></script>
	<script src="../js/textsize.js"></script>
</body>
</html>
