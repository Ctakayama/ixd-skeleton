<html>
<head>
	<title>Settings</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="https://code.jquery.com/jquery.js"></script>
	<link href="/css/introHCI.css" rel="stylesheet">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<style>
		@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap');
	</style>

		
	<script src="/js/bootstrap.min.js"></script>
</head>
<body>
	<div class = "nav-options upper">
		{{> header}}
		<h1>Settings</h1>
	</div>

	<div class = "nav-options mid " style ="min-height: 20vh;">
		<ul style="padding:0">
		<br>
		<br>
		{{#each settingsReader}}
			<h2><img src = "../images/{{icon}}" alt = "highlight" width = "50"> {{label}}</h2>
			
			<div class="slidecontainer">
				{{slideL}} <input type="range" min="1" max="100" value="50" class="slider" id="myRange" style = "width: 250"> {{slideR}}
			</div>
		{{/each}}
		<br>
		<h2>Account Details</h2>
		{{#each settingsAccount}}
			<input class="form-control form-control-lg" type="{{type}}"placeholder="{{label}}">
			<br>
		{{/each}}
		
		<button class = "btn" onclick = "saveSettings()">Save Settings</button> 
		</ul>
		
	</div>
	{{> popup}}
	<script>
		function saveSettings(){
			$('#experimental-header').html("<h1>Settings Saved</h1>")
			$('#experimental-body').html("")
			$('#experimental').modal('show');
		}
	</script>
</body>
</html>
