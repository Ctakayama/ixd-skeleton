<html>
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	
	<style>
		@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap');
	</style>
	<link href="/css/introHCI.css" rel="stylesheet">
	<script src="/js/login.js"></script>
</head>
<body>
	<div class = "container">
		<h1 class = "highlight">Peruse</h1><br>
		<span id = "subtitle">an e-reader web app</span>
	</div>
	
	<div class = "login">
		<h2>sign up</h2>
		{{#each signupMethod}}
			<input class="form-control form-control-lg" type="{{type}}" id = "{{label}}" placeholder="{{label}}">
		{{/each}}
		<br>
		<button class="btn login-btn" type="submit" onclick="enterUser()">sign up</button> <br>
		<hr>
		<a href = "/">log in instead</a> 
		
	</div>


	
</body>
</html>
